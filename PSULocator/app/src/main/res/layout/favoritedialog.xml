<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="170dip"
    android:background="@color/lightGray">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="30dp"
        android:background="@color/veryDarkGray"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:height="30dp"
        android:clickable="true"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/cancel"
        android:id="@+id/cancel"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/favorite_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:text="Would you like to add this location to your favorites?"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/yes"
        android:background="@drawable/roundedcorners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       YES       "
        android:height="30dp"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_below="@+id/favorite_prompt"
        android:layout_alignLeft="@+id/favorite_prompt"
        android:layout_alignStart="@+id/favorite_prompt"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/no"
        android:background="@drawable/roundedcorners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       NO       "
        android:height="30dp"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_alignBaseline="@+id/yes"
        android:layout_alignBottom="@+id/yes"
        android:layout_toLeftOf="@+id/cancel"
        android:layout_toStartOf="@+id/cancel" />

</RelativeLayout>